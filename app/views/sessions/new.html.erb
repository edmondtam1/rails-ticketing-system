<%= render 'shared/content_title', title: 'Log in'%>

<%= form_with model: @user, local: true do |f| %>
  <%= render 'shared/errors', obj: @user %>

  <div class="form-group">
    <%= f.label :email %>
    <%= f.text_field :email, { class: "form-control col-sm-4" } %>
  </div>
  <div class="form-group">
    <%= f.label :password %>
    <%= f.password_field :password, class: "form-control col-sm-4" %>
  </div>
  <%= f.submit 'Login', class: 'btn btn-success' %>
<% end %>

<br>
<%= link_to "Or register here", register_path %>