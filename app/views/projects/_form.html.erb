<%= render 'shared/errors', obj: @project %>

<%= form_with model: @project, local: true do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: "form-control", size: '50x6' %>
  </div>
  <%= f.submit (@project.new_record? ? 'Add new project' : 'Update project'), class: 'btn btn-success' %>
<% end %>