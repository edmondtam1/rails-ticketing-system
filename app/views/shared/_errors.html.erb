<% if obj && obj.errors.any? %>
  <div class="form-group">
    <div class="alert alert-danger col-sm-4">
      <h5>Please fix the following errors:</h5>
      <ul>
        <% obj.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>