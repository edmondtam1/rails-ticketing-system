<% flash.each do |name, msg| %>
  <% if msg.is_a?(String) %>
    <div class="alert alert-<%= name == "notice" ? "success" : "danger" %> alert-dismissible fade show">
      <a class="close" data-dismiss="alert">&#215;</a>
      <%= content_tag :div, msg, id: "flash_#{name}", class: "h6" %>
    </div>
  <% end %>
<% end %>
