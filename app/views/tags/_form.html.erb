<%= render 'shared/content_title', title: title %>


<%= form_with model: @tag, local: true do |f| %>
  <%= render 'shared/errors', obj: @tag %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.submit (@tag.new_record? ? 'Add tag' : 'Update tag') %>
  </div>
<% end %>